@using FYH.Cookbook.Model.CustomException
@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
    var errorMessage = Model != null && Model.Exception is CbBaseException ? Model.Exception.Message : "An error occurred while processing your request.";
}

<h1 class="text-danger">Sorry</h1>
<h2 class="text-danger">@errorMessage</h2>

